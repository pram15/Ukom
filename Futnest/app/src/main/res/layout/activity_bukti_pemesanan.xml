<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9da4b0"
    tools:context=".BuktiPemesanan">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/ocean"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="87dp"
        android:fontFamily="@font/oregano"
        android:text="Bukti Pemesanan"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvAlamatBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPilLap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="Alamat Lapangan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvNoTelpPemilikBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAlamatBukti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="Nomer Telepon Pemilik Lapangan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTgldanJamBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamaLapBukti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="Tanggal dan Jam"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvNamaLapBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamaBukti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="Nama Lapangan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNoTelpPemilikBukti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="102dp"
        android:paddingStart="10dp"
        android:text="NB: Segera melakukan dp untuk lapangan ke tempat persewaan lapangan, tenggat 4 jam setelah pemesanan atau pesanan akan dibatalkan"
        android:textColorHint="#070707"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNamaBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="Nama"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPilLap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTgldanJamBukti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="Lapangan A/B"
        android:textSize="18sp" />

</RelativeLayout>