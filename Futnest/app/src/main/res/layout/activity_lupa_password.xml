<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89B2EA"
    android:orientation="vertical"
    android:gravity="clip_vertical"
    tools:context=".LupaPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="16dp"
            android:text="Lupa Password"
            android:textSize="36sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEmailLupa"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Email:"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/etPassLupa"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Minim Pass Lama :"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmailLupa" />

        <EditText
            android:id="@+id/etKonfirmPass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Kata Sandi Baru:"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassLupa" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/KodeOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            app:height="90dp"
            android:layout_gravity="center_horizontal"
            app:bar_enabled="true"
            app:bar_success_color="#FFFF"
            app:bar_height="2dp"
            app:length="5"
            app:otp_text_size="50dp"
            app:bar_active_color="@color/grey">

        </in.aabhasjindal.otptextview.OtpTextView>

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/rounded"
            android:onClick="btnLupa"
            android:text="Masuk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="484dp"
            app:layout_constraintTop_toBottomOf="@+id/KodeOtp"/>

    </LinearLayout>


</RelativeLayout>